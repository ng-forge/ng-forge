{
  "name": "core-examples",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "example",
  "sourceRoot": "apps/examples/core/src",
  "tags": ["examples", "e2e"],
  "implicitDependencies": ["dynamic-forms", "dynamic-forms-material", "examples-shared-testing"],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "dist/apps/examples/core",
        "browser": "apps/examples/core/src/main.ts",
        "tsConfig": "apps/examples/core/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "stylePreprocessorOptions": {
          "includePaths": ["internal/styling/src"]
        },
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/examples/core/public"
          }
        ],
        "styles": ["apps/examples/core/src/styles.scss"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "1.5mb",
              "maximumError": "2mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "8kb",
              "maximumError": "16kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "core-examples:build:production"
        },
        "development": {
          "buildTarget": "core-examples:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4205
      }
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "core-examples:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "core-examples:build",
        "port": 4205,
        "staticFilePath": "dist/apps/examples/core/browser",
        "spa": true
      }
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{workspaceRoot}/dist/.playwright/apps/examples/core"],
      "options": {
        "config": "apps/examples/core/playwright.config.ts"
      }
    }
  }
}
