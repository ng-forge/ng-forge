{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/docs/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@ng-doc/builder:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/docs",
        "browser": "apps/docs/src/main.ts",
        "tsConfig": "apps/docs/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/docs/public"
          },
          {
            "glob": "**/*",
            "input": "dist/ng-doc/docs/assets",
            "output": "assets/ng-doc"
          },
          {
            "glob": "**/*",
            "input": "node_modules/@ng-doc/ui-kit/assets",
            "output": "assets/ng-doc/ui-kit"
          }
        ],
        "styles": ["apps/docs/src/styles.scss"],
        "allowedCommonJsDependencies": ["dayjs", "@braintree/sanitize-url", "dompurify", "cytoscape-cose-bilkent", "elkjs", "@ng-doc/core"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2.5mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "20kb",
              "maximumError": "40kb"
            }
          ],
          "outputHashing": "all",
          "baseHref": "/ng-forge/",
          "ngDoc": {
            "config": "apps/docs/ng-doc.config.ts"
          }
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "ngDoc": {
            "config": "apps/docs/ng-doc.config.ts"
          }
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@ng-doc/builder:dev-server",
      "options": {
        "buildTarget": "docs:build:development"
      },
      "configurations": {
        "production": {
          "buildTarget": "docs:build:production"
        },
        "development": {
          "buildTarget": "docs:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "docs:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@analogjs/vitest-angular:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "configFile": "vite.config.ts"
      }
    },
    "ng-doc:rebuild": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rm -rf dist/ng-doc", "nx build docs"],
        "cwd": "{workspaceRoot}",
        "parallel": false
      },
      "outputs": ["{workspaceRoot}/dist/apps/docs"]
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "docs:build",
        "port": 4200,
        "staticFilePath": "dist/apps/docs/browser",
        "spa": true
      }
    }
  }
}
