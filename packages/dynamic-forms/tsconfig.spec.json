{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "preserve",
    "target": "es2022",
    "types": ["vitest/globals", "node"],
    "moduleResolution": "bundler",
    "isolatedModules": true
  },
  "files": ["src/test-setup.ts"],
  "include": [
    "vite.config.ts",
    "vite.config.typecheck.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.type-test.ts",
    "src/**/*.d.ts"
  ]
}
